block snd-content
  div#editform
      form(method="POST", action="/subscribe")
        p Vui lòng nhập địa chỉ email để chúng tôi có thể gửi đến bạn những bài viết mới nhất.
        input#inputsource.form-control.block(name="email", type="text", placeholder="Email")
        span
          input#captcha.form-control.block(name="captcha", type="text", placeholder="Bạn là robot?")
          img#imgcaptcha(src="/captcha.jpg", height="40px", width="80px")
          a.btn.btn-inverse.btn-small(href="#new", onclick='$("#imgcaptcha").attr("src", "/captcha.jpg?"+new Date().getTime());')
            i.fa.fa-refresh
        div(style="display:inline;float:right;margin-top:5px;")
          a.btn.btn-success.btn-small(href="#submit",onclick="$(this).closest('form').submit();") xác nhận

