extends layout
block js
  link(href="/css/bootstrap-wysihtml5-0.0.2.css", rel="stylesheet")
  script(src="/js/wysihtml5-0.3.0.js", type="text/javascript")
  script(src="/js/jquery-1.7.2.min.js", type="text/javascript")
  script(src="/js/bootstrap.min.js", type="text/javascript")
  script(src="/js/bootstrap-wysihtml5-0.0.2.js", type="text/javascript")

block fst-content
  a.title(href="/admin") Chỉnh sửa ...

block snd-content
  #editform
      form(method="POST", action="/edit/" + row.id)
        textarea#myeditor(name="usertext", placeholder="Nhập thông tin ở đây")
          | #{row.text}

        script(type='text/javascript').
          $('#myeditor').wysihtml5();

        input#inputsource.form-control.block(name="source", value=row.source, type="text", placeholder="Nguồn chứng thực thông tin")
        div(style="display:inline;float:right;")
          a.btn.btn-success.btn-small(href="#submit",onclick="$(this).closest('form').submit();") Cập nhật

